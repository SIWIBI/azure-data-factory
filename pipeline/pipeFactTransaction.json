									"path": "['node']['period']['fromDate']"
								},
								"sink": {
									"name": "createdAt",
									"type": "DateTime"
								}
							}
						],
						"collectionReference": "$['data']['transactions']['edges']"
					}
				},
				"inputs": [
					{
						"referenceName": "JSONEXL",
						"type": "DatasetReference"
					}
				],
				"outputs": [
